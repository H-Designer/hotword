.out-view{
  background-color: #f1f1f1;
  height: 5rem;
  border-radius: 1rem;
  width: 87%;
  margin: 0.5rem auto 1rem auto;
  padding: 0.5rem 0.5rem 0rem 1rem;
}
.title-view{
  font-size: 20px;
}
.content-view{
  font-size: 14px;
  padding: 0.5rem 0.5rem 0rem 0.5rem;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}